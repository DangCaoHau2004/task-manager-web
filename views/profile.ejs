<%- include("./partials/header.ejs") %>
<!-- nav -->
<nav class="navbar bg-transparent">
  <div class="container-md d-flex justify-content-center border-bottom">
    <h5 class="mb-3">Profile</h5>
  </div>
</nav>
<% if(locals.user){ %>

<div class="container-md mt-2">
  <div class="header d-flex flex-column align-items-center mt-2">
    <!-- Logo User -->
    <img
      class="rounded-circle"
      style="width: 50px; height: auto"
      src="./images/user.jpg"
      alt="logo_user"
    />
    <!-- Name -->
    <p class="mt-3 text-center font-weight-bold"><%= user.name %></p>
    <!-- edit profile btn  -->
    <button type="button" class="btn w-100">Edit Profile</button>
  </div>
  <div class="information mt-5">
    <div class="list-group">
      <p class="list-group-item border-0 border-bottom">
        Email: <%= user.email %>
      </p>
    </div>
  </div>
</div>
<% } else{%>
<div class="container d-flex justify-content-center">
  <a href="/login-signUp"><h1>Please click here to log in.</h1></a>
</div>
<% }%> <%- include("./partials/footer.ejs") %>
